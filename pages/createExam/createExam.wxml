<!--pages/createExam/createExam.wxml-->
<ui-sys title="创建小测验" img="/static/img/4put2.png" navBg="bg-cyan-gradient" imgBottom>
    <view class="page">
        <view>
            <scroll-view scroll-x class="bg-white response cu-steps steps-bottom shadow-warp" style="width: 590rpx; border-radius: 25rpx; margin-top: 20rpx;" sscroll-into-view="scroll-{{scroll}}" scroll-with-animation>
                <view class="cu-item {{index>=currentIndex?'':'text-blue'}} padding-lr-xl" wx:for="{{exercisesList.length + 1}}" wx:key="" id="scroll-{{index}}">
                    {{index + 1}} <text class="num" data-index="{{index + 1}}"></text>
                </view>
            </scroll-view>

        </view>
        <scroll-view style="height: 1000rpx; overflow: hidden;  margin-top: 20rpx;" scroll-y>
            <view class="shadow-warp ui-BG p-4 radius xl textarea" style="margin: auto;">
                <view style="margin-bottom: 10rpx; font-weight: 600;">请输入题干</view>
                <textarea name="" value="{{textArea}}" maxlength="-1" style="width: 600rpx; height: 550rpx; background-color: #ECF0F3; padding: 10rpx;"></textarea>
                <view style="height: 60rpx; ">
                    <image src="/static/index/ocr.png" style="margin-top: 15rpx; width: 45rpx;height: 45rpx; position: relative; left: 240rpx;" bindtap="ocrClick" />
                </view>
            </view>
            <view class="imgList" style="margin: auto; margin-top: 20rpx;">
                <view class="imgTitle">
                    <view class="action">
                        图片上传
                    </view>
                    <view class="action">
                        {{imgList.length}}/4
                    </view>
                </view>
                <view class="cu-form-group">
                    <view class="grid col-4 grid-square flex-sub">
                        <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
                            <image src='{{imgList[index]}}' mode='aspectFill'></image>
                            <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
                                <text class="cicon-close" style="font-size: 20rpx; color: #666;"></text>
                            </view>
                        </view>
                        <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
                            <text class="cicon-camera-add" style="font-size: 60rpx; color: #666;position: absolute;top: 25%; right: 25%;"></text>
                        </view>
                    </view>
                </view>
            </view>
            <view style="margin: auto;">
                <ui-form-group title="题型选择" contentui="justify-end" ui="radio-group">
                    <ui-radio value="{{color}}" bg="bg-blue-light" label="blue-light" bind:change="colorChange">选择</ui-radio>
                    <ui-radio value="{{color}}" bg="bg-green-gradient" label="green-gradient" bind:change="colorChange">填空</ui-radio>
                </ui-form-group>
                <view style="margin: auto; width: 83%; color: #666; font-weight: 600; text-align: left;">答案录入</view>
                <view>
                    
                </view>
            </view>
        </scroll-view>
        <view class="buttons">
            <button class="ui-btn bg-olive-gradient" style="width: 230rpx;">完成</button>
            <button class="ui-btn bg-cyan-gradient" style="width: 230rpx;" bindtap="nextExercises">下一题</button>
        </view>
    </view>
</ui-sys>
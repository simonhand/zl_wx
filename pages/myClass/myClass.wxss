/* pages/personalInfo/personalInfo.wxss */
page {
    background-color: #ECF0F3;
}

.personalInfoPage {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.i-swipeout {
    width: 100%;
}

.i-swipeout-demo-item {
    margin: 0px 10px;
    border-radius: 20px;
    max-height: 100px;
    box-shadow: 18px 18px 30px #d1d9e6, -18px 0px 30px #fff;
}

.title {
    width: 100%;
    height: 40px;
    display: flex;
    color: #666;
    font-size: 18px;
    font-weight: 800;
    margin-top: 15px;
    margin-bottom: 10px;
}

.title-left{
    flex: 1;
}
.title-center{
    flex: 3;
    line-height: 40px;
    text-align: center;
}
.title-right{
    position: relative;
    top: 20rpx;
    left: 45rpx;
    flex: 1;
}
.i-swipeout-demo-item {
    margin: 20px;
}

.imageClass {
    width: 54px;
    height: 54px;
    border-radius: 50%;
}

.classCard {
    display: flex;
    flex-direction: row;
    justify-content:start;
    align-items: center;
    width: 100%;
}

.left-class-card {
    flex: 2;
    margin-left:15px;
}

.right-class-card {
    flex: 3;
    height: 120rpx;
    margin-left: 10px;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    flex-wrap: wrap;
}

.right-class-card-top text:nth-child(1) {
    color: #111111;
}

.right-class-card-top text:nth-child(2) {
    color: #666666;
    margin-left: 20rpx;
}

.right-class-card-bottom view {
    display: inline;
    flex: 2;
    width: 10px;
    overflow: hidden;
    color: #888888;
}

.invitation-input{
    margin-top: 8px;
    border-bottom: 1px solid #666666;
}
.createClassForm{
    height: 240rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 81%;
}
.createClassForm view{
   display: flex;
   flex-direction: row;
   margin-top: 50rpx;
}
.createClassForm view input{
    border-bottom: 1px solid #666;
 }
 
.calc-progress{
    margin-top: 20rpx;
    margin-left: 20rpx;
}
.calcWindow {
    /* flex: 6; */
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    color: #666;
}

.calcTopButton{
    flex: 6;
    height: 200rpx;
    background-color: #ECF0F3;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.calcTopButtonItem {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 10%;
    width: 20%;
    height: 65%;
    color: #666;
    font-weight: 1000;
    text-align: center;
    border-radius: 50%;
    box-shadow: -7px -7px 20px 0px #fff9,
    -4px -4px 5px 0px #fff9,
    7px 7px 20px 0px #0002,
    4px 4px 5px 0px #0001;
}

.calcBottomButton {
    flex: 3;
    display: flex;
    background-color: #ECF0F3;
    flex-direction: row;
}

.num_point {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-left: 10%;
    width: 20%;
    height: 50%;
    color: #666;
    font-weight: 1000;
    border-radius: 50%;
    box-shadow: -7px -7px 20px 0px #fff9,
    -4px -4px 5px 0px #fff9,
    7px 7px 20px 0px #0002,
    4px 4px 5px 0px #0001;
}

.num_point image {
    height: 50%; 
    width: 50%;
}

.num_zero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 10%;
    width: 50%;
    height: 50%;
    border-radius: 50px;
    font-weight: 1000;
    text-align: center;
    line-height: 4.5;
    color: #666;
    box-shadow: -7px -7px 20px 0px #fff9,
    -4px -4px 5px 0px #fff9,
    7px 7px 20px 0px #0002,
    4px 4px 5px 0px #0001;
}

.num_selected {
    box-shadow: 
    inset -7px -7px 20px 0px #fff9,
    inset -4px -4px 5px 0px #fff9,
    inset 7px 7px 20px 0px #0002,
    inset 4px 4px 5px 0px #0001;
}

.calcWindowProblem {
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin-top: 60px;
}

.calcWindowProblem text {
    font-size: 50px;
    line-height: 45px;
    margin-left: 20px;
    margin-right: 20px;
}

.calcWindowSolvtion{
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
   margin-bottom: 70px;
   font-size: 40px;
}